{
  "name": "botwrando-api",
  "version": "0.1.0",
  "description": "Backend API for the BotW All Shrines Randomizer sidecar web app",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "npx concurrently -k -n COMPILE,NODEMON,TESTRUN -c gray,blue,yellow \"tsc -w\" \"nodemon -w dist dist/index.js\" \"jest --coverage --watchAll\"",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/botwrando/botwrando-api.git"
  },
  "author": "Ryan Harvey <ryan.b.harvey@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/botwrando/botwrando-api/issues"
  },
  "homepage": "https://github.com/botwrando/botwrando-api#readme",
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.42",
    "@types/source-map-support": "^0.5.1",
    "concurrently": "^5.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "express": "^4.17.3",
    "helmet": "^3.22.0",
    "pg": "^8.2.1",
    "sequelize": "^5.21.11"
  },
  "engines": {
    "node": "12.x"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}
